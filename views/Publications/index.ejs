            <li><a href="/news">News</a></li>
            <li><a href="/trekking">Trekking & Riding</a></li>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/myStudentFamily">My Student Family</a></li>
            <li><a href="/administration"> Administration</a></li>
          </ul>
        </div>
        <div class="hamburger">
          <div class="line"></div>
          <div class="line"></div>
          <div class="line"></div>
        </div>
      </nav>
    </div>

    <section class="main-section">
      <div class="buttons">
        <a href="/publications#Editor"><button>Editor Of Books</button></a>
        <a href="/publications#Books"><button>BookÂ Chapters</button></a>
        <a href="/publications#Journal"><button>Journals</button></a>
        <a href="/publications#Conference"><button>Conference</button></a>
      </div>
      <div class="publication">



        <!-- ---------------- Editor Of Books Begins ----------------------------- -->
        <h1 id="Editor">Editor Of Books</h1>
        <hr>
        <div style="display: flex; flex-wrap: wrap; gap: 2rem; justify-content: center; align-items: center;">
        <%for(journal of data){ %>
          <% let type=journal.type %>

            <%if(type==="Editor"){%>

              <div class="card" style="max-width: 300px; gap: 1rem; align-items: center;">
                <div class="img-part">
                  <img src=<%=journal.link%> alt=""
                  style="height:300px; width: 270px;object-position: center center; border-radius: 20px;">
                </div>
                <div class="author-part" style="display: flex; flex-direction: row;">
                  <h4 class="" style="text-align: justify; font-weight: 600;"><span>&#x275D</span>
                    <%=journal.title%><span>&#x275E</span>
                  </h4>
                </div>
             </div>

              <% }} %>
      </div>
      <!-- ------------------------- Editor Of Books Ends ---------------------------- -->

      <!-- **************JOURNAL PUBLICATIONS BEGIN*********** -->
      <h1 id="Journal">Journal Publications</h1>
      <hr>

      <%for(journal of data){ %>
        <% let type=journal.type %>

          <%if(type==="Journal"){%>
            <div class="card">
              <div class="name">
                <b>
                  <p style="font-weight: 600;">
                    <%=journal.author%>
                  </p>
                </b>
                <p>
                  <span id="date">
                    <strong style="font-weight: 600;">
                      <%=journal.date%> :
                    </strong>
                  </span>
                  <%=journal.location%>
                </p>
              </div>

              <div class="description">
                <h2 style="font-weight: 700; margin: 5px;">
                  <%=journal.title%>
                </h2>
                <hr>

                <p>
                  <%=journal.description%>
                </p>
                <a href="<%=journal.link%>" id="googleScholar">Details</a>
              </div>
            </div>
            <%}%>
              <%}%>



                <!-- **************Publications in International Conferences BEGIN*********** -->
                <h1 id="Conference">Publications in International Conferences</h1>
                <hr>

                <%for(journal of data){ %>
                  <% let type=journal.type %>

                    <%if(type==="Conference"){%>
                      <div class="card">
                        <div class="name">
                          <b>
                            <p style="font-weight: 600;">
                              <%=journal.author%>
                            </p>
                          </b>
                          <p>
                            <span id="date">
                              <strong style="font-weight: 600;">
                                <%=journal.date%> :
                              </strong>
                            </span>
                            <%=journal.location%>
                          </p>
                        </div>

                        <div class="description">
                          <h2 style="font-weight: 700; margin: 5px;">
                            <%=journal.title%>
                          </h2>
                          <hr>

                          <p>
                            <%=journal.description%>
                          </p>
                          <a href="<%=journal.link%>" id="googleScholar">Details</a>
                        </div>
                      </div>
                      <%}%>
                        <%}%>


                          <!-- **************JOURNAL PUBLICATIONS BEGIN*********** -->
                          <h1 id="Books">Book Chapters Published</h1>
                          <hr>

                          <%for(journal of data){ %>
                            <% let type=journal.type %>

                              <%if(type==="Book"){%>
                                <div class="card">
                                  <div class="name">
                                    <b>
                                      <p style="font-weight: 600;">
                                        <%=journal.author%>
                                      </p>
                                    </b>
                                    <p>
                                      <span id="date">
                                        <strong style="font-weight: 600;">
                                          <%=journal.date%> :
                                        </strong>
                                      </span>
                                      <%=journal.location%>
                                    </p>
                                  </div>

                                  <div class="description">
                                    <h2 style="font-weight: 700; margin: 5px;">
                                      <%=journal.title%>
                                    </h2>
                                    <hr>

                                    <p>
                                      <%=journal.description%>
                                    </p>
                                    <a href="<%=journal.link%>" id="googleScholar">Details</a>
                                  </div>
                                </div>
                                <%}%>
                                  <%}%>

  </div>

  </section>

  <footer>
