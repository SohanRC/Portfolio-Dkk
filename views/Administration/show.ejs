                    <h3 style="font-size: 1.5rem;">Documents :</h3>
                    <form id="upload-form-1" class="upload-form">
                        <input type="text" value="currDocument" readonly style="display: none;" id="id-1"><br>
                        <input id="file-field-1" type="file" />
                        <button style="border-radius: 5px; padding: 5px;" type="submit" class="upload-button" data-index="1" >Upload Documents</button>
                    </form>
                    <br><br>
                    <section style="min-height: 0px; display: flex;flex-wrap: wrap;">
                        <%for(imgs of images){%>
                            <% if(imgs.type=="currDocument"){ %>
                            <div class="card" style="width: 230px; margin: 1rem;">
                                <img src="https://res.cloudinary.com/<%=cloud_name%>/image/upload/w_3000,h_3000,c_crop,q_100/<%=imgs.url%>.png"
                                    class="card-img-top" alt="..." style="width: 200px;"><br>
                                <div class="card-body">
                                    <form method="POST" action="/administration/image/<%=imgs.url%>">
                                        <div class="div"
                                            style="display: flex;flex-direction: column;justify-content: center;align-items: center;">
                                            <input type="text" placeholder="Add Title" name="caption"
                                                value="<%=imgs.caption %>"><button
                                                style="background-color: rgb(47, 0, 255);color: white; border-radius: 5px; border: none; padding: 5px; font-size: 0.8rem;margin: 5px;">Add
                                                Title</button>
                                        </div>
                                    </form>
                                    <form method="POST"
                                        action="/administration/image/<%=imgs.url%>?_method=DELETE">
                                        <button
                                            style="background-color: red;color: white; border-radius: 5px; border: none; padding: 5px; margin-left:4vw; font-size: 1rem;">Delete</button>
