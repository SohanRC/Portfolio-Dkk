                    <hr style="width: 100%">
                    <li><a href="/EditHome/add/currRes">Add Current Administrative Responsibilities</a></li>
                    <ul>
                        <% data.forEach((e)=>{ %>
                            <% if(e.type=="currRes" ) { %>
                                <li>➤ <%= e.description %>
                                </li>
                                <div>
                                    <span><a href="/EditHome/edit/<%= e._id %>" style="padding: 0.2rem 0.4rem; border: none; background-color: red; color: white;
                                border-radius: 0.2rem; cursor: pointer; font-size: 1rem;">Edit</a></span>
                                    <span><a href="/EditHome/delete/<%= e._id %>" style="padding: 0.2rem 0.4rem; border: none; background-color: black; color: white;
                                border-radius: 0.2rem; cursor: pointer; font-size: 1rem;">Delete</a></span>
                                </div>
                                <% } %>
                                    <% }) %>
                    </ul>

                    <!-- // Links -->
                    <h3 style="font-size: 1.5rem;">Links :</h3>
                    <li><a href="/administration/EditHome/add/Link">Add a Link</a></li>
                    <ul>
                        <% adminData.forEach((e)=>{ %>
                            <% if(e.type=="Link" ) { %>
                                <li>➤ <a href=<%=e.link %>><%=e.title%></a></li>
                                <div>
                                    <span><a href="/administration/EditHome/edit/<%= e._id %>" style="padding: 0.2rem 0.4rem; border: none; background-color: red; color: white;
