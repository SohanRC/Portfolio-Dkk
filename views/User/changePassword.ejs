<body>
    <%- include("../flash.ejs")%>
        <div class="navbar-container">
            <nav>
                <h1>Dr.Dipak Kumar Kole</h1>
                <div class="routes">
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/publications">Publications</a></li>
