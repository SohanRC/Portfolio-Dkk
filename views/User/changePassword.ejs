                        <li><a href="/myStudentFamily">My Student Family</a></li>
                    </ul>
                </div>
                <div class="hamburger">
                    <div class="line"></div>
                    <div class="line"></div>
                    <div class="line"></div>
                </div>
            </nav>
        </div>
<br><br>
        <form action="/user/changePassword" method="post" novalidate class="needs-validation">
            <div class="row">
                <div class="col-8 offset-2">
                    <h2 style="margin-left:23vw ;">Change Password</h2> <br><br>
                    <div class="mb-3">
                        <label for="oldPassword" class="form-label">Old Password</label>
                        <input type="text" class="form-control" id="oldPassword" name="oldPassword" required>
                        <div class="invalid-feedback">
                            Please enter a valid password.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="newPassword" class="form-label">New Password</label>
                        <input type="text" class="form-control" id="newPassword" name="newPassword" required>
                        <div class="invalid-feedback">
                            Please enter a valid password.
                        </div>
                    </div>

                    <button class="btn btn-primary" style="margin-left:23vw ;">Submit</button>
                </div>
            </div>

        </form>
        <br><br><br>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
